<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_log_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/msg_log_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <include
                layout="@layout/view_logger_tag"
                android:layout_width="@dimen/logger_tag_width"
                android:layout_height="@dimen/logger_tag_height"
                android:layout_gravity="center_vertical" />


            <TextView
                android:id="@+id/msg_log_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Tag"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_log_tag"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <include
                layout="@layout/view_logger_class"
                android:layout_width="@dimen/logger_tag_width"
                android:layout_height="@dimen/logger_tag_height"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/msg_log_className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Tag"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/msg_log_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="success"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/msg_log_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msg_log_level"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="18/2/8"
            android:textColor="#aa000000"
            android:textSize="13sp" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#328cfb"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:text="message"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/msg_log_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="no responses"
        android:textColor="#ee000000"
        android:textSize="15sp" />
</LinearLayout>